{
    "$schema": "vendor/infection/infection/resources/schema.json",
    "source": {
        "directories": [
            "src/Downloader",
            "src/Entity",
            "src/FiasInformer",
            "src/FiasStatusChecker",
            "src/Exception",
            "src/Filter",
            "src/Helper",
            "src/HttpTransport",
            "src/Serializer",
            "src/Storage",
            "src/Unpacker",
            "src/XmlReader"
        ],
        "excludes": [
            "CurlHttpTransport.php"
        ]
    },
    "logs": {
        "text": "infection.log"
    },
    "mutators": {
        "@default": true,
        "Throw_": {
            "ignore": [
                "Liquetsoft\\Fias\\Component\\Downloader\\DownloaderImpl::openLocalFile"
            ]
        },
        "ConcatOperandRemoval": {
            "ignore": [
                "Liquetsoft\\Fias\\Component\\XmlReader\\XmlReaderImpl::setReader"
            ]
        },
        "FunctionCallRemoval": false,
        "MethodCallRemoval": false,
        "NullSafeMethodCall": false
    }
}